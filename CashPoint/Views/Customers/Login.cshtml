@{
    ViewData["Title"] = "Login";
}


<div class="container d-flex justify-content-center align-items-center mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
            <div class="card shadow">

                <div class="card-body">
                    <h1 class="card-title text-center">Create</h1>
                    <h5 class="card-title text-center">Customer</h5>
                    <form asp-action="CheckUser"  asp-route-pass=pass asp-route-name=name>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <input class="form-control" name="name" id="name" placeholder="Name"/>
                            <br />
                            <input class="form-control" name="pass" id="pass" placeholder="Password"/>
                            <span value="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label value="Password" class="control-label"></label>
                            <span value="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                        </div>
                        <div class="form-group mt-3 ">
                            <input type="submit" value="Login" class="btn btn-dark " />
                        </div>
                        <div class="mt-2">
                            <a asp-action="Create">Create New</a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
