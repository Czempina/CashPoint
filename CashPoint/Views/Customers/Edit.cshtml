@model CashPoint.Models.Customer

@{
    ViewData["Title"] = "Withdraw Money";
}

<h1>Withdraw Money</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Withdraw" asp-route-amount=amount>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label class="control-label">Type value</label>
                <input type="number" class="form-control" name="amount" id="amount"/>
                <span asp-validation-for="AccountBalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Withdraw" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
